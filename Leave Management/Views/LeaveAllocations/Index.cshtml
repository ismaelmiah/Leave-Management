@model Leave_Management.Models.CreateLeaveAllocationVM
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Leave Allocations List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Create New Leave Type</a>
    </div>
</div>
<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>
                    Leave Types
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LeaveTypes)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="SetLeave" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="fas fa-edit"></i>Allocate To Employee</a>
                        <!--Html.ActionLink("Allocate To You", "SetLeave", new {item.Id})-->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(function () {
            var save = '@TempData["result"]';
            if (save != null && save != '') {
                if (save == "Update") {
                    toastr.info('Update Operation Successfully');
                }
                else toastr.success('Successfully Created Leave Type');
            }

        })
    </script>
}

